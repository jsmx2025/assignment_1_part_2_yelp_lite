<div class="page-header">
  <h3>Response #<%= @response.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Content</dt>
      <dd><%= @response.content %></dd>

      <dt>Owner</dt>
      <dd>
        <% if @response.owner.present? %>
          <a href="/ownerprofiles/<%= @response.owner_id %>">
            <%= @response.owner.owner_id %>
          </a>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd>
        <% if @response.review.present? %>
          <a href="/reviews/<%= @response.review_id %>">
            <%= @response.review.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Restaurant</dt>
      <dd>
        <% if @response.restaurant.present? %>
          <a href="/restaurants/<%= @response.restaurant_id %>">
            <%= @response.restaurant.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/responses" class="btn btn-primary">
        Back
      </a>
      <a href="/responses/<%= @response.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_response/<%= @response.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
