<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description__name -->
      <div class="form-group">
        <label for="description__name" class="control-label">
          Description  name
        </label>

        <input type="text" id="description__name" name="description__name" placeholder="Description  name" class="form-control" value="<%= @tag.description__name %>">
      </div>

      <button class="btn btn-success">
        Create Tag
      </button>
      or
      <a href="/tags">Cancel</a>
    </form>
  </div>
</div>
