<div class="form-group">
  <%= f.label :stars, "Rating Stars" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :ratings_stars_gteq, :class => "form-control", :placeholder => "Rating Stars greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :ratings_stars_lteq, :class => "form-control", :placeholder => "Rating Stars less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :restaurants_name_cont, "Restaurant name contains" %>
      <%= f.text_field :restaurants_name_cont, :class => "form-control", :placeholder => "Restaurant name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/userprofiles" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#userprofiles_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @userprofiles.each do |userprofile| %>
      <tr>
        <td>
          <% if userprofile.user.present? %>
            <a href="/user_ids/<%= userprofile.user.id %>">
              <%= userprofile.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/userprofiles/<%= userprofile.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == userprofile.user %>
            <a href="/userprofiles/<%= userprofile.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_userprofile/<%= userprofile.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @userprofiles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
