<!-- Validation failure messages -->
<% if @ownerprofile.errors.any? %>
  <% @ownerprofile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Ownerprofile</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_ownerprofile" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for owner_id -->
      <div class="form-group">
        <label for="owner_id" class="control-label">
          Owner
        </label>

        <%= select_tag(:owner_id, options_from_collection_for_select(Owner.all, :id, :email, @ownerprofile.owner_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Ownerprofile
      </button>
      or
      <a href="/ownerprofiles">Cancel</a>
    </form>
  </div>
</div>
